<body>

<header>üêπ Hamsti Browser</header>

<div id="searchSection">
<input type="text" id="searchInput" placeholder="Suche nach Hamster Videos, Spielen & Geschichten">
<button onclick="search()">Suchen</button>
</div>

<div class="results" id="results"></div>

<script>
const data = [
  {type:'video', title:'Raffi Abenteuer Video', url:'https://www.youtube.com/embed/HbZC6zZYYGM'},
  {type:'video', title:'Hamsti Langvideo', url:'https://www.youtube.com/embed/ZfrgZWUrUtE'},
  {type:'game', title:'Hamsti Quiz', url:'https://www.w3schools.com/html/mov_bbb.mp4'},
  {type:'story', title:'Raffi im Wald', url:'#', content:'Der Wald war dunkel und geheimnisvoll...'},
  {type:'story', title:'Der verlorene Schatz', url:'#', content:'Raffi fand eine alte Karte...'}
];

function search(){
  const query = document.getElementById('searchInput').value.toLowerCase();
  const resultsDiv = document.getElementById('results');
  resultsDiv.innerHTML = '';
  for(let item of data){
    if(item.title.toLowerCase().includes(query)){
      let card = document.createElement('div');
      card.className='result-card';
      if(item.type==='video'){
        card.innerHTML=`<h3>${item.title}</h3><iframe src="${item.url}" allowfullscreen></iframe>`;
      } else if(item.type==='game'){
        card.innerHTML=`<h3>${item.title}</h3><p>Klicke zum Spielen:</p><button onclick="alert('Spiel wird gestartet!')">Spiel starten</button>`;
      } else if(item.type==='story'){
        card.innerHTML=`<h3>${item.title}</h3><p>${item.content}</p>`;
      }
      resultsDiv.appendChild(card);
    }
  }
}
</script>

</body>
