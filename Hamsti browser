#searchSection { text-align:center; margin:20px; }
input { width:60%; padding:10px; border-radius:10px; border:none; font-size:16px; }
button { padding:10px 20px; border-radius:10px; border:none; background:#ffcc00; color:black; font-weight:bold; cursor:pointer; margin-left:5px; }
.results { max-width:800px; margin:auto; margin-top:20px; }
.result-card { background:#222; padding:15px; margin:10px 0; border-radius:12px; }
iframe { width:100%; height:300px; border:none; border-radius:10px; margin-top:10px; }
h3 { color:#ffcc00; }
