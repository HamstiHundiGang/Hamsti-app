<body>

<h1>üêπ Hamsti Gang</h1>
<p>Raffi sammelt Sterne ‚≠ê ‚Äì weiche Fallen ‚ùå aus!</p>
<p id="score">Punkte: 0</p>

<div id="game">
  <div id="hamster">üêπ</div>
</div>

<button onclick="start()">Start / Neustart</button>

<script>
let hamster=document.getElementById("hamster");
let game=document.getElementById("game");
let scoreEl=document.getElementById("score");

let x=130;
let score=0;
let speed=200;
let running=false;

document.addEventListener("keydown",e=>{
  if(e.key==="ArrowLeft") x-=20;
  if(e.key==="ArrowRight") x+=20;
  x=Math.max(0,Math.min(260,x));
  hamster.style.left=x+"px";
});

game.addEventListener("click",e=>{
  x = e.offsetX < 150 ? x-30 : x+30;
  x=Math.max(0,Math.min(260,x));
  hamster.style.left=x+"px";
});

function spawn(){
  if(!running) return;
  let item=document.createElement("div");
  item.className="item";
  let good=Math.random()>0.3;
  item.textContent= good ? "‚≠ê" : "‚ùå";
  item.style.left=Math.random()*260+"px";
  game.appendChild(item);

  let y=0;
  let fall=setInterval(()=>{
    if(!running){ clearInterval(fall); return; }
    y+=5;
    item.style.top=y+"px";

    let hx=hamster.offsetLeft;
    let ix=item.offsetLeft;

    if(y>350){
      if(Math.abs(hx-ix)<30){
        if(good){
          score++;
          scoreEl.textContent="Punkte: "+score;
          speed=Math.max(60,speed-5);
        }else{
          alert("GAME OVER üò¢\nPunkte: "+score);
          running=false;
        }
      }
      item.remove();
      clearInterval(fall);
    }
  },30);

  setTimeout(spawn,speed);
}

function start(){
  game.querySelectorAll(".item").forEach(i=>i.remove());
  score=0;
  speed=200;
  scoreEl.textContent="Punkte: 0";
  running=true;
  spawn();
}
</script>

</body>
</html>
